<main class="container">
	<div class="d-flex align-items-center p-3 my-3 text-white bg-purple rounded shadow-sm">
		<img class="me-3" src="/img/bootstrap-000.png" alt="" width="48" height="38">
		<div class="lh-1">
			<h1 class="h6 mb-0 text-white lh-1">Bootstrap</h1>
			<small>Since 2011</small>
		</div>
	</div>

	<div class="d-flex gap-5 justify-content-center">

		<div class="my-3 p-3 bg-body rounded shadow-sm">
			<h6 class="border-bottom pb-2 mb-0">Lista de Usuários</h6>

			{{#each users}}
			<div class="d-flex text-muted pt-3">
				<svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32"
					xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32"
					preserveAspectRatio="xMidYMid slice" focusable="false">
					<title>Placeholder</title>
					<rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff"
						dy=".3em">32x32</text>
				</svg>

				<div class="pb-3 mb-0 small lh-sm border-bottom w-100">
					<div class="d-flex justify-content-between">
						<strong class="text-gray-dark">@{{name}}</strong>
					</div>
					<span class="d-block">{{email}}</span>
					<div class="btn-group">
						<a href="/user/update/{{_id}}" class="link-warning px-2">Atualizar</a>
						<a href="/deleteuser/{{_id}}" class="link-danger px-2">Excluir</a>
					</div>
				</div>
			</div>
			{{/each}}

			<small class="d-block text-end mt-3">
				<!-- Button trigger modal -->
				<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreateUser">
					Novo usuário
				</button>
			</small>
		</div>

		<div class="my-3 p-3 bg-body rounded shadow-sm">
			<h6 class="border-bottom pb-2 mb-0">Lista de Administradores</h6>

			{{#each admins}}
			<div class="d-flex text-muted pt-3">
				<svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32"
					xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32"
					preserveAspectRatio="xMidYMid slice" focusable="false">
					<title>Placeholder</title>
					<rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff"
						dy=".3em">32x32</text>
				</svg>

				<div class="pb-3 mb-0 small lh-sm border-bottom w-100">
					<div class="d-flex justify-content-between">
						<strong class="text-gray-dark">@{{name}}</strong>
					</div>
					<span class="d-block">{{email}}</span>

					<div class="btn-group">
						<a href="/admin/update/{{_id}}" class="link-warning px-2">Atualizar</a>
						<a href="/deleteadmin/{{_id}}" class="link-danger px-2">Excluir</a>
					</div>
				</div>
			</div>
			{{/each}}

			<small class="d-block text-end mt-3">
				<!-- Button trigger modal -->
				<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreateAdmin">
					Novo administrador
				</button>
			</small>
		</div>
	</div>

</main>

<!-- Modal Create Administrator -->
<div class="modal fade" id="modalCreateAdmin" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
	aria-labelledby="modalCreateAdminLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modalCreateAdminLabel">Modal title</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form action="/createadmin" method="POST" id="formCreateAdmin">
					<div class="mb-3">
						<label for="recipient-name" class="col-form-label">Nome:</label>
						<input type="text" name="name" class="form-control" id="recipient-name">
					</div>
					<div class="mb-3">
						<label for="recipient-email" class="col-form-label">Email:</label>
						<input type="email" name="email" class="form-control" id="recipient-email">
					</div>
					<div class="mb-3">
						<label for="recipient-password" class="col-form-label">Senha:</label>
						<input type="password" name="password" class="form-control" id="recipient-password">
					</div>
					<button type="submit" class="btn btn-primary">Criar</button>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

<!-- Modal Create User -->
